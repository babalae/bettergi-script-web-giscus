{
  // 官方 giscus 源
  "origins": [
    "https://giscus.app"
  ],
  "originsRegex": [
    // WebView2 VirtualHost 伪域名
    "^https://app\\.local$",

    // localhost 本地调试（支持任意端口）
    "^http://localhost(:[0-9]+)?$",
    "^http://127\\.0\\.0\\.1(:[0-9]+)?$",

    // file 协议
    "^file://.*$",

    // file 协议导致 window.origin 为 'null'
    "^null$",
  ]
}
